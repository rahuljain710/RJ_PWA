// Call hooks unconditionally
const infiniteHitsData = useInfiniteHits();
const instantSearchData = useInstantSearch(props);

// Use server data if available, otherwise use hook data
const hits = isServer ? algoliaHits : infiniteHitsData.hits;
const showMore = isServer ? () => {} : infiniteHitsData.showMore;
const isLastPage = isServer ? true : infiniteHitsData.isLastPage;
const result = isServer ? {} : infiniteHitsData.result;
const status = isServer ? { status: 'idle' } : instantSearchData.status;
const results = isServer ? algoliaResults : {};
