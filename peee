const useInfiniteHits = () => {
  if (typeof window === 'undefined') {
    return { hits: [], showMore: () => {}, isLastPage: true, result: {} };
  }
  return require('react-instantsearch-hooks-web').useInfiniteHits();
};

const useInstantSearch = (props) => {
  if (typeof window === 'undefined') {
    return { status: { status: 'idle' } };
  }
  return require('react-instantsearch-hooks-web').useInstantSearch(props);
};

// Then use normally
const infiniteHitsData = useInfiniteHits();
const instantSearchData = useInstantSearch(props);
